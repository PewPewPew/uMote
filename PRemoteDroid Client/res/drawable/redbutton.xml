<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#ffffc600"
                android:endColor="#ffffba00"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#ff333333" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="#ffbd0101"
                android:startColor="#ffff4444"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#ffffba00" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="#ffbd0101"
                android:startColor="#ffff4444"
                android:angle="270" />
            <stroke
                android:width="2dp"
                android:color="#ff333333" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
