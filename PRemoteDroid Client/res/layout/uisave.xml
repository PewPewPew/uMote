<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  <TextView android:id="@+id/SaveUILabel"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="Please input the name of the UI:"
		android:layout_marginLeft="8dp"
		android:textStyle="bold" android:textSize="14sp"
		android:layout_alignParentLeft="true">
	</TextView>
	<EditText android:id="@+id/SaveUIInput"
		android:layout_width="300dip" android:layout_height="wrap_content"
		android:textSize="18sp" android:gravity="center_vertical"
		android:autoText="true" android:layout_below="@+id/SaveUILabel"
		android:layout_marginLeft="8dp" android:layout_marginRight="8dp"
		android:layout_alignParentLeft="true">
	</EditText>
	<Button android:id="@+id/SaveUISaveBtn"
		android:layout_width="90dip" android:layout_marginLeft="8dp" 
		android:layout_height="wrap_content"
		android:text="Save" android:layout_below="@+id/SaveUIInput"
		android:layout_marginTop="3dp">
	</Button>
		<Button android:id="@+id/SaveUIResetBtn"
		android:layout_width="90dip" android:layout_height="wrap_content"
		android:text="Reset" android:layout_alignTop="@+id/SaveUISaveBtn"
		android:layout_toRightOf="@+id/SaveUISaveBtn">
	</Button>
	<Button android:id="@+id/SaveUICancelBtn"
		android:layout_width="90dip" android:layout_marginRight="8dp"
		android:layout_height="wrap_content"
		android:text="Cancel" android:layout_toRightOf="@+id/SaveUIResetBtn"
		android:layout_alignTop="@+id/SaveUIResetBtn">
	</Button>
</RelativeLayout>
