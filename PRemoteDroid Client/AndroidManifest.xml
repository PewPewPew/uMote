<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.pierre.remotedroid.client"
	android:versionName="2010-05-23" android:versionCode="47"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<uses-sdk android:minSdkVersion="3" />
	<application android:icon="@drawable/icon" android:label="@string/app_name"
		android:name=".app.PRemoteDroid">
		<activity android:name=".activity.ControlActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"></action>
				<category android:name="android.intent.category.LAUNCHER"></category>
			</intent-filter>
		</activity>
		<activity android:name=".activity.SettingsActivity"
			android:label="@string/text_settings"></activity>
		<activity android:name=".activity.HelpActivity"
			android:label="@string/text_help"></activity>
		<activity android:name=".activity.FileExplorerActivity"
			android:label="@string/text_file_explorer"></activity>
		<activity android:label="@string/text_connections"
			android:name=".activity.connection.ConnectionListActivity"></activity>
		<activity android:name=".activity.connection.ConnectionWifiEditActivity"
			android:label="@string/text_wifi"></activity>
		<activity android:name=".activity.connection.ConnectionBluetoothEditActivity"
			android:label="@string/text_bluetooth"></activity>
		<activity android:name=".activity.connection.BluetoothDevicesActivity"
			android:label="@string/text_bluetooth_devices"></activity>
		<activity android:name=".activity.UIMainMenuActivity"
			android:label="@string/text_UI_Main_Menu_Title"></activity>
		<activity android:name=".activity.UIMainHelpActivity"
			android:label="@string/text_UI_Main_Help_Title"></activity>
		<activity android:name=".activity.CreateUIActivity"
			android:label="@string/text_UI_Creation_Title"></activity>
		<activity android:name=".activity.KeyBindingActivity"
			android:label="@string/text_Key_Binding_Title"></activity>
	
</application>
	<supports-screens android:smallScreens="true"
		android:anyDensity="true" android:normalScreens="true"
		android:resizeable="true" android:largeScreens="true"></supports-screens>
	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
	<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
	<uses-permission android:name="android.permission.BLUETOOTH"></uses-permission>
	<uses-permission android:name="android.permission.BLUETOOTH_ADMIN"></uses-permission>
</manifest>